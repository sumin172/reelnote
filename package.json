    "@nestjs/testing": "^11.0.0",
    "@nx/eslint": "21.5.3",
    "@nx/eslint-plugin": "21.5.3",
    "@nx/gradle": "^21.5.3",
    "@nx/jest": "21.5.3",
    "@nx/js": "^21.5.3",
    "@nx/nest": "21.5.3",
    "@nx/next": "^21.5.3",
    "@nx/node": "^21.5.3",
    "@nx/web": "21.5.3",
    "@nx/webpack": "21.5.3",
    "@swc-node/register": "~1.11.1",
    "@swc/cli": "~0.6.0",
    "@swc/core": "~1.15.0",
    "@swc/helpers": "~0.5.12",
    "@swc/jest": "~0.2.38",
    "@types/jest": "^30.0.0",
    "@types/node": "20.19.9",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.0.0",
    "husky": "^9.1.7",
    "jest": "^30.0.2",
    "jest-environment-node": "^30.0.2",
    "jest-util": "^30.0.2",
    "nx": "^21.5.3",
