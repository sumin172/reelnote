{
  "name": "api-schema",
  "root": "packages/api-schema",
  "sourceRoot": "packages/api-schema/src",
  "projectType": "library",
  "implicitDependencies": ["catalog-service", "review-service"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/packages/api-schema/generated"],
      "options": {
        "command": "pnpm run api-schema:generate"
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm run api-schema:clean"
      }
    }
  },
  "tags": ["type:library", "scope:shared"]
}

