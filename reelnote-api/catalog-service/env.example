# Catalog Service Environment Variables (example)
# Copy to .env or .env.local and fill in real values

# Database
CATALOG_DB_URL="postgresql://user:password@localhost:5432/catalog_db?schema=public"
# Shadow Database (Prisma Migrate용 - 선택사항)
# Shadow database가 필요한 경우, 별도의 데이터베이스를 생성하고 여기에 URL을 지정하세요.
# 지정하지 않으면 Prisma가 자동으로 shadow database를 생성하려고 시도합니다.
# PRISMA_SHADOW_DATABASE_URL="postgresql://user:password@localhost:5432/catalog_db_shadow?schema=public"

# TMDB API
TMDB_API_KEY=your_tmdb_api_key_here
TMDB_API_BASE_URL=https://api.themoviedb.org/3
TMDB_API_TIMEOUT=10000

# Redis (optional)
# REDIS_URL=redis://localhost:6379
REDIS_URL=
CACHE_TTL_SECONDS=3600
CACHE_NAMESPACE=catalog-cache

# Application
PORT=4000
NODE_ENV=development
# CORS 설정 (쉼표로 구분)
# development: 비어있으면 localhost:* 패턴 자동 허용
# e2e/production: 명시적으로 지정된 origin만 허용
CORS_ORIGINS=http://localhost:3000,http://localhost:3100

# Catalog Service Settings
MOVIE_STALE_THRESHOLD_DAYS=7
WARM_POOL_SIZE=100
